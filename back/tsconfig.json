{
    "include": ["**/*"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "./",

        // enable top-level await and import/export syntax
        "target": "es2017",
        "moduleResolution": "node16",
        "module": "es2022",

        // enable type checking
        "strict": true,
        "noImplicitAny": false,


        // to make jest happy
        "esModuleInterop": true,

        // to allow json importing
        "resolveJsonModule": true
    }
}
